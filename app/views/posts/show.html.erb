<div class="col-md-8 col-md-offset-2">
	<div class="message-show">
		<!-- <h2><%= @post.job_title %></h2> -->
		<p class="message-desc">job: <%= @post.job_title %> company: <%= (@post.company)%> location<%=(@post.location) %></p>
    <p class="message-des">contact: <%= @post.your_name %>  phone number:<%= (@post.phone) %></p>

		<hr>


		 <div class="links btn-group">
			<%= link_to "Back", '/posts.1', class: "btn btn-default" %>
