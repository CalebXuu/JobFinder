<div class="container" style=" border-style: solid; width: 700px; ">
<h6 style="text-align:center; font-size: 35px;">Sign In</h6>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

 <div class="form-group" style="margin-left:300px; width: 100px;">

      <%= f.input :email, required: true, autofocus: true ,autocomplete: "off"%>
 </div>

  <div class="form-group" style="margin-left:300px; width: 100px;">
     <%= f.label :password %><br />
     <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"%>
  </div>


   <% if devise_mapping.rememberable? -%>
   <div class="form-group" style="margin-left :300px">
     <%= f.check_box :remember_me %>
     <%= f.label :remember_me %>
   </div>
   <% end -%>



  <div class="form-group" style="margin-left :300px">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<div class="form-group" style="margin-left :300px"> <%= render "devise/shared/links" %></div>
</div>
