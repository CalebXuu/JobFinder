<div class="container" style=" border-style: solid; width: 700px ">
<h6 style="text-align:center; font-size: 35px;">Edit <%= resource_name.to_s.humanize %></h6>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

    <div class="actions" style="margin-left :150px; font-color:#000000">
      <%= f.label :email ,style: 'color: black;' %><br />
      <%= f.email_field :email, autofocus: true %>
</div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
<div class="actions" style="margin-left :150px; font-color:#000000">
  <%= f.label :new_password,style: 'color: black;'  %><br />
    <%= f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
  </div>
  <div class="actions" style="margin-left :150px; font-color:#000000">
      <%= f.label :password_confirmation,style: 'color: black;'  %><br />
    <%= f.password_field :password_confirmation, required: false %>
  </div>
  <div class="actions" style="margin-left :150px; font-color:#000000">
      <%= f.label :current_password ,style: 'color: black;' %><br />
    <%= f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

    <div class="actions" style="margin-left :150px; font-color:#000000">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

  <div class="actions" style="margin-left :150px; font-color:#000000"><h3>Cancel my account</h3> </div>
<div class="actions" style="margin-left :150px; font-color:#000000">
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
