<!DOCTYPE html>
<html>
<head>
  <title>Job Engine</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>
</head>
<style>
    body {
        background-color: #	FFFFFF;
    }

    .my-navbar {
        /*margin-bottom: 0px;*/
    }

    .my-panel {
        width: 400px;
        min-height: 400px;
        margin: 100px auto;
        text-align: center;
    }

    .my-panel .logo {
        margin: 10px auto;
        width: 128px;
    }

    .my-panel .form {
        width: 256px;
        margin: 0 auto;
    }

    .my-panel input[type="text"], input[type="password"]  {
        border-radius: 3px;
        border: none;
        color: #333333;
        font-size: 16px;
        height: 46px;
        margin-bottom: 5px;
        padding: 13px 12px;
        width: 100%;
    }

    .btn-login {
        background-color: #00BBFF;
        border-color: #00BBFF;
        border-width: 0;
        color: #FFFFFF;
        display: block;
        margin: 0 auto;
        padding: 15px 50px;
        text-transform: uppercase;
        width: 100%;
    }

</style>
<body>
<nav class="navbar navbar-default navbar-static-top navbar-inverse">
  <div class="container">
    <ul class="nav navbar-nav">
      <li class="active">
        <a ><span ></span> JOB ENGINE</a>
      </li>
      <li class="active">
        <a href="/"><span class="glyphicon glyphicon-home"></span> Home</a>
        </li>


    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-right">
       <% if current_new_user %>
          <%= link_to 'logout', destroy_new_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'login', new_user_session_path %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<%= yield %>

</body>
</html>
